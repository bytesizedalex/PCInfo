<Window x:Class="PCInfo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PCInfo.ViewModels"
        mc:Ignorable="d"
        Title="Computer Information"
        Width="520" Height="380"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Device Information"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Margin="0 0 0 20"/>

        <!-- Content -->
        <StackPanel Grid.Row="1" Spacing="12">

            <!-- Hostname -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Hostname:" Width="120" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding NetworkInfo.Hostname}" />
                <Button Content="Copy" Margin="10 0 0 0"
                        Command="{Binding CopyHostnameCommand}"/>
            </StackPanel>

            <!-- Domain -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Domain:" Width="120" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding NetworkInfo.Domain}" />
                <Button Content="Copy" Margin="10 0 0 0"
                        Command="{Binding CopyDomainCommand}"/>
            </StackPanel>

            <!-- IP Addresses -->
            <StackPanel>
                <TextBlock Text="IP Addresses:" FontWeight="SemiBold"/>
                <ItemsControl ItemsSource="{Binding NetworkInfo.IPAddresses}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" />
                                <Button Content="Copy" Margin="10 0 0 0"
                                        Command="{Binding DataContext.CopyIpCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Connectivity Test -->
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBox Width="260"
                         Text="{Binding TestUrl, UpdateSourceTrigger=PropertyChanged}"
                         PlaceholderText="https://ipv4.icanhazip.com"/>
                <Button Content="Test" Margin="10 0 0 0"
                        Command="{Binding TestConnectivityCommand}"/>
            </StackPanel>

            <TextBlock Text="{Binding ConnectivityStatus}"
                       Foreground="DarkGreen"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Footer -->
        <StatusBar Grid.Row="2" Margin="0 20 0 0">
            <StatusBarItem Content="{Binding StatusMessage}" />
        </StatusBar>

    </Grid>
</Window>